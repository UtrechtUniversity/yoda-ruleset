{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "for_publishing",
    "evaluation",
    "biological_samples"
  ],
  "properties": {
    "introduction": {
      "type": "object",
      "title": "Reviewer instructions",
      "description": "Please note that your review is permanent and cannot be altered after submission. If you are in doubt, please contact the YOUth project manager first."
    },
    "evaluation": {
      "type": "string",
      "title": "Would you approve / reject / reject (resubmit) this data request?",
      "enum": [
        "Approve",
        "Reject (resubmit)",
        "Reject"
      ]
    },
    "evaluation_rationale": {
      "type": "string",
      "title": "Please provide a brief rationale for your evaluation.",
      "description": "This is mandatory if the data request is rejected."
    },
    "biological_samples": {
      "type": "boolean",
      "title": "Will biological samples be used?",
      "default": false
    },
    "for_publishing": {
      "type": "boolean",
      "title": "Data request for publishing?"
    }
  },
  "dependencies": {
    "evaluation": {
      "oneOf": [
        {
          "properties": {
            "evaluation": {
              "enum": [
                "Approve"
              ]
            }
          }
        },
        {
          "properties": {
            "evaluation": {
              "enum": [
                "Reject (resubmit)",
                "Reject"
              ]
            }
          },
          "required": [
            "evaluation_rationale"
          ]
        }
      ]
    },
    "biological_samples": {
      "oneOf": [
        {
          "properties": {
            "biological_samples": {
              "enum": [
                false
              ]
            }
          }
        },
        {
          "properties": {
            "biological_samples": {
              "enum": [
                true
              ]
            },
            "biological_samples_volume": {
              "type": "string",
              "title": "Is the volume requested reasonable and does it not seriously deplete the resource?"
            },
            "biological_samples_committee_approval": {
              "type": "string",
              "title": "Does the committee agree to the use of these samples for the specific research question?"
            }
          },
          "required": [
            "biological_samples_volume",
            "biological_samples_committee_approval"
          ]
        }
      ]
    },
    "for_publishing": {
      "oneOf": [
        {
          "properties": {
            "for_publishing": {
              "enum": [
                false
              ]
            }
          }
        },
        {
          "properties": {
            "for_publishing": {
              "enum": [
                true
              ]
            },
            "research_question_answerability": {
              "type": "string",
              "title": "Can the research question be answered with the requested YOUth data?"
            },
            "study_quality": {
              "type": "string",
              "title": "How do you evaluate the study design?"
            },
            "study_value": {
              "type": "string",
              "title": "Is the study scientifically valuable?"
            },
            "researcher_expertise": {
              "type": "string",
              "title": "Do you believe that the researcher team has the expertise necessary to correctly analyze and report on the research question at hand?"
            }
          },
          "required": [
            "research_question_answerability",
            "study_quality",
            "study_value",
            "researcher_expertise"
          ]
        }
      ]
    }
  }
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Data Publication platform of Utrecht University" />
    <title>{{ title }} - Data Publication platform of Utrecht University</title>

    <style>
        .map {
            height: 450px;
            width: 600px;
        }

        a.leaflet-control-zoom-in,
        a.leaflet-control-zoom-out {
            text-decoration: none ! important;
        }

        .indented {
            padding-left: 10px;
        }
    </style>

    <link href="/static/css/bootstrap.min.css?v=1559637767" rel="stylesheet" />
    </style>
    <link href="/static/css/uu.css?v=1559637767" rel="stylesheet" />

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js" integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og==" crossorigin=""></script>
    <script>
        let bounds = [
            [1.0, 1.0],
            [1.0, 1.0]
        ]; // initialization of coordinate pairs with arbitrary values. These will be overwritten
    </script>
</head>

<body>
    <div class="container bg-white no-padding">
        <header>
            <div class="logo pt-2">
                <img src="/static/img/logo.svg"/>
                </div>
                <div class="header-title">
                    <h1>Data publication platform of Utrecht University</h1>
                </div>
        </header>
        <main>
            <div class="creators">
                <div class="row">
                    <div class="col-sm-12">
                        {% for creator in creators %} {{ creator.Name.Family_Name }}, {{ creator.Name.Given_Name }} {{ "&" if not loop.last }} {% endfor %}
                    </div>
                </div>

            </div>
            <section class="content">
                <h2>{{ title }}</h2>
                <div class="meta">
                    <label>Publication Date:</label>
                    <span class="date">{{ publication_date }}</span>
                    <label>Accessibility:</label>
                    <span>{{ data_access_restriction }}</span>
                </div>
                <p class="description">{{ description }}</p>
                <div class="tags">
                    <label>Tags</label>
                    {% for tag in tags %}
                    <span class="tag">{{ tag }}</span>
                    {% endfor %}
                </div>
                <hr />
                {%if data_access_restriction.startswith('Open') %}
                <a class="btn btn-primary access-btn" target="_blank" href="{{ open_access_link }}">
                            View contents
                        </a>
                {% endif %}

            </section>
            <section class="metadata">
                <h2>Metadata</h2>
                <div class="list">
                    <div class="group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Disciplines</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for discipline in disciplines %}
                                               {{ discipline }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% if labs %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Originating laboratories</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for lab in labs %}
                                               {{ lab }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}
                        {% if additional_labs %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Additional laboratories</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for lab in additional_labs %}
                                               {{ lab }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}
                        {% if apparatus %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Apparatus</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in apparatus %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if main_setting %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Main setting</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in main_setting %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if process_hazard %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Process hazard</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in process_hazard %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if geological_structure %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Geological structure</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in geological_structure %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if geomorphical_feature %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Geomorphical feature</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in geomorphical_feature %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if material %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Material</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in material %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if monitoring %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Monitoring device</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in monitoring %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if software %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Software</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in software %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if measured_property %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Measured property</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{% for item in measured_property %}
                                               {{ item }}{{ ", " if not loop.last }}
                                           {% endfor %}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Version</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ version }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Language</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ language }}</span>
                            </div>
                        </div>
                    </div>

                    <div class="group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Data classification</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ data_classification }}</span>
                            </div>
                        </div>
                    </div>

                    {% for loc in covered_geolocation_place if not ((covered_geolocation_place|length == 1) and (loc == "" or loc == None)) %}
                    {% if loop.first %}
                    <div class="group">
                        {% endif %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Geolocation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ loc }}</span>
                            </div>
                        </div>

                        {% if loop.last %}
                    </div>
                    {% endif %}
                    {% endfor %}

                    {% for loc in geolocations %}
                    {% if loop.first %}
                    <div class="group">
                        {% endif %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Geolocation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                        <div class='map' id='map{{ loop.index }}'></div>
                                                <script>

                lon0 = {{ loc.geoLocationBox.westBoundLongitude }};
                lat0  = {{ loc.geoLocationBox.southBoundLatitude }};
                lon1 = {{ loc.geoLocationBox.eastBoundLongitude }};
                lat1  = {{ loc.geoLocationBox.northBoundLatitude }};

                bounds = [[lat0, lon0], [lat1, lon1]];

                var mymap = L.map('map{{ loop.index }}').fitBounds(bounds, {'maxZoom': 5});

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&amp;copy <a href="http://osm.org/copyright">OpenStreetMap</a> contributors',
                        maxZoom: 18
                }).addTo(mymap);

                if (lat0==lat1 && lon0==lon1) {
	            var marker = L.marker([lat0, lon0]).addTo(mymap);
		}
		else {
                    var rectangle = L.rectangle([[lat0, lon0],[lat1, lon1]]).addTo(mymap);
		}
                                                </script>
                                    </span>
                                <span>
                                {{ loc.Description_Temporal.Start_Date }} - {{ loc.Description_Temporal.End_Date }} | {{ loc.Description_Spatial }}
                                </span>
                            </div>
                        </div>
                        {% if loop.last %}
                    </div>
                    {% endif %}

                    {% endfor %}

                    {% for funder in funding_reference %}
                    {% if funder.Funder_Name %}
                    {% if loop.first %}
                    <div class="group">
                        {% endif %}

                        {% if funder.Funder_Reference %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Funder reference</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ funder.Funder_Reference }}</span>
                            </div>
                        </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Funder</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ funder.Funder_Name }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Award/grant Number</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ funder.Award_Number }}</span>
                            </div>
                        </div>

                        {% if funder.Award_Name %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Award/grant name</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ funder.Award_Name }}</span>
                            </div>
                        </div>
                        {% endif %}


                        {% if loop.last %}
                    </div>
                    {% endif %}
                    {% endif %}
                    {% endfor %}

                    <div class="group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Persistent Identifier</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                {{ persistent_identifier_datapackage.Identifier_Scheme }}: {{ persistent_identifier_datapackage.Identifier }}
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Publication Date</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ publication_date }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Last Modification</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ last_modified_date }}</span>
                            </div>
                        </div>
                    </div>

                    {% for pack in related_datapackages %}
                    {% if pack.Relation_Type %}
                    {% if loop.first %}
                    <div class="group">
                        {% endif %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label>Related datapackage</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ pack.Title }}</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Type of relation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ pack.Relation_Type }}</span>
                            </div>
                        </div>

                        {% if pack.Persistent_Identifier is defined %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Persistent Identifier</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                {{ pack.Persistent_Identifier.Identifier_Scheme }}: {{ pack.Persistent_Identifier.Identifier }}
                                </span>
                            </div>
                        </div>
                        {% endif %}

                        {% if loop.last %}
                    </div>
                    {% endif %}
                    {% endif %}
                    {% endfor %}

                    <div class="group">
                        {% for creator in creators %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Name</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ creator.Name.Family_Name }}, {{ creator.Name.Given_Name }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Person Identifier</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                            {% for id in creator.Person_Identifier %}
                                                {{ id.Name_Identifier_Scheme }}: {{ id.Name_Identifier  }}{{ ",&nbsp;" if not loop.last }}
                                            {% endfor %}
                                        </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Affiliation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                        {% for affiliation in creator.Affiliation %}
                                            {{ affiliation }}{{ ",&nbsp;" if not loop.last }}
                                        {% endfor %}
                                        </span>
                            </div>
                        </div>
                        {% endfor %}

                        {% for contributor in contributors %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Name</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ contributor.Name.Family_Name }}, {{ contributor.Name.Given_Name }}</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Person Identifier</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                            {% for id in contributor.Person_Identifier %}
                                                {{ id.Name_Identifier_Scheme }}: {{ id.Name_Identifier  }}{{ ",&nbsp;" if not loop.last }}
                                            {% endfor %}
                                        </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Affiliation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                        {% for affiliation in contributor.Affiliation %}
                                            {{ affiliation }}{{ ",&nbsp;" if not loop.last }}
                                        {% endfor %}
                                        </span>
                            </div>
                        </div>
                        {% endfor %}

                        {% for contact in contacts %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Name</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ contact.Name.Family_Name }}, {{ contact.Name.Given_Name }}</span>
                            </div>
                        </div>

                        {% if contact.Position %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Position</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ contact.Position }}</span>
                            </div>
                        </div>
                        {% endif %}
                        {% if contact.Email %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">E-mail</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ contact.Email }}</span>
                            </div>
                        </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Person Identifier</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                            {% for id in contact.Person_Identifier %}
                                                {{ id.Name_Identifier_Scheme }}: {{ id.Name_Identifier  }}{{ ",&nbsp;" if not loop.last }}
                                            {% endfor %}
                                        </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2">
                                <label class="indented">Affiliation</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                        {% for affiliation in contact.Affiliation %}
                                            {{ affiliation }}{{ ",&nbsp;" if not loop.last }}
                                        {% endfor %}
                                        </span>
                            </div>
                        </div>
                        {% endfor %}

                        <div class="row">
                            <div class="col-sm-2">
                                <label>License</label>
                            </div>
                            <div class="col-sm-10">
                                <span>
                                    {% if license_uri|length>1 %}
                                        <a href="{{ license_uri }}" target="blank">{{ license }}</a>
                                    {% else %}
                                        {{ license }}
                                    {% endif %}
                                    </span>
                            </div>
                        </div>
                        {% if collection_name|length>1 %}
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Collection name</label>
                            </div>
                            <div class="col-sm-10">
                                <span>{{ collection_name }}</span>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <br />
            </section>
            <section class="questions">
                <h2>Questions?</h2>
                <div class="col text-center">
                    <a href="https://www.uu.nl/en/research/research-data-management" class="btn btn-secondary support-btn" target="_blank">
                            Research data management support
                        </a>
                </div>
            </section>
        </main>
        <footer>
            <div class="logo">
                <img src="/static/img/logo_footer.svg"/>
            </div>
        </footer>
    </div>
</body>

</html>
